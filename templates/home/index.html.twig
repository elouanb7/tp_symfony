{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card p-5">
            <div class="card-body">
                <div class="card-title text-center h5">
                    MyParty, votre ami préféré en soirée
                </div>
            </div>
            <div class="card mb-3">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="card-body">
                            <div class="row ">
                                <div class="col-6 my-auto">
                                    <p class="card-text h5">Créé ta soirée dés aujourd'hui !</p>
                                </div>
                                {% if app.user %}
                                    <div class="col-6 "><a href="{{ path('soiree_create') }}" class="btn btn-primary btn-block">Créer une soirée</a></div>
                                    {% else %}
                                        <div class="col-3 "><a href="{{ path('app_login') }}" class="btn btn-primary btn-block">Se connecter</a></div>
                                        <div class="col-3 "><a href="" class="btn btn-outline-primary btn-block">Nous
                                                rejoindre</a>
                                        </div>
                                {% endif %}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
